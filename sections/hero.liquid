<div class="gift-guide-template">
  <!-- 1. Full-width illustration image - hidden on mobile -->
  <div class="full-width-image">
    {% assign full_width_src = section.settings.full_width_image | default: 'gift-guide-items.png' | asset_url %}
    {% if section.settings.full_width_image %}
      {% assign full_width_src = section.settings.full_width_image | image_url %}
    {% endif %}
    <img 
      src="{{ full_width_src }}" 
      alt="{% if section.settings.full_width_image %}{{ section.settings.full_width_image.alt | default: 'Full width banner' }}{% else %}Gift Guide Items{% endif %}" 
      loading="lazy"
      width="{% if section.settings.full_width_image %}{{ section.settings.full_width_image.width | default: 1920 }}{% else %}1920{% endif %}"
      height="{% if section.settings.full_width_image %}{{ section.settings.full_width_image.height | default: 200 }}{% else %}200{% endif %}"
    />
  </div>

  <!-- 2. Layout (50/50 on Desktop, Stacked on Mobile) -->
  <div class="two-column-grid page-width">
    <!-- Left column: Text and button (hidden on mobile) -->
    <div class="grid-column text-column">
      <div class="main-title">{{ section.settings.heading }}</div>
      <div class="description desktop-description">
        {{ section.settings.text }}
      </div>
      <div class="mobile-description">
        Discover Joy: Your Ultimate Holiday Gift Destination
      </div>
      <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="cta-button desktop-only-button">
        {{ section.settings.button_text }}
        <svg width="27" height="12" class="arrow-icon" viewBox="0 0 27 12" fill="none" xmlns="http://www.w3.org/2000/svg">
<path d="M1 5.25C0.585786 5.25 0.25 5.58579 0.25 6C0.25 6.41421 0.585786 6.75 1 6.75L1 5.25ZM26.5303 6.53033C26.8232 6.23743 26.8232 5.76256 26.5303 5.46967L21.7574 0.696697C21.4645 0.403804 20.9896 0.403804 20.6967 0.696697C20.4038 0.989591 20.4038 1.46446 20.6967 1.75736L24.9393 6L20.6967 10.2426C20.4038 10.5355 20.4038 11.0104 20.6967 11.3033C20.9896 11.5962 21.4645 11.5962 21.7574 11.3033L26.5303 6.53033ZM1 6.75L26 6.75L26 5.25L1 5.25L1 6.75Z" fill="#333333"/>
</svg>

      </a>
    </div>
    
    <!-- Right column: Illustration -->
    <div class="grid-column image-column">
      <!-- Desktop image -->
      {% assign desktop_src = 'gift-guide-illustration.png' | asset_url %}
      {% if section.settings.desktop_image %}
        {% assign desktop_src = section.settings.desktop_image | image_url %}
      {% endif %}
      <img 
        src="{{ desktop_src }}" 
        alt="{% if section.settings.desktop_image %}{{ section.settings.desktop_image.alt | default: 'Desktop illustration' }}{% else %}Gift Guide Illustration{% endif %}" 
        loading="lazy"
        width="{% if section.settings.desktop_image %}{{ section.settings.desktop_image.width | default: 1920 }}{% else %}1920{% endif %}"
        height="{% if section.settings.desktop_image %}{{ section.settings.desktop_image.height | default: 700 }}{% else %}700{% endif %}"
        class="desktop-image"
      />
      
      <!-- Mobile-specific layout with full image and centered button -->
      <div class="mobile-content">
        {% assign mobile_src = 'gift-mobile.png' | asset_url %}
        {% if section.settings.mobile_image %}
          {% assign mobile_src = section.settings.mobile_image | image_url %}
        {% endif %}
        <img 
          src="{{ mobile_src }}" 
          alt="{% if section.settings.mobile_image %}{{ section.settings.mobile_image.alt | default: 'Mobile illustration' }}{% else %}Gift Guide Mobile Illustration{% endif %}" 
          loading="lazy"
          width="{% if section.settings.mobile_image %}{{ section.settings.mobile_image.width | default: 767 }}{% else %}767{% endif %}"
          height="{% if section.settings.mobile_image %}{{ section.settings.mobile_image.height | default: 500 }}{% else %}500{% endif %}"
          class="mobile-image"
        />
        <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="mobile-centered-button">
          {{ section.settings.button_text }}
          <svg width="27" height="12" viewBox="0 0 27 12" fill="none" xmlns="http://www.w3.org/2000/svg" class="arrow-icon">
<path d="M1 5.25C0.585786 5.25 0.25 5.58579 0.25 6C0.25 6.41421 0.585786 6.75 1 6.75L1 5.25ZM26.5303 6.53033C26.8232 6.23743 26.8232 5.76256 26.5303 5.46967L21.7574 0.696697C21.4645 0.403804 20.9896 0.403804 20.6967 0.696697C20.4038 0.989591 20.4038 1.46446 20.6967 1.75736L24.9393 6L20.6967 10.2426C20.4038 10.5355 20.4038 11.0104 20.6967 11.3033C20.9896 11.5962 21.4645 11.5962 21.7574 11.3033L26.5303 6.53033ZM1 6.75L26 6.75L26 5.25L1 5.25L1 6.75Z" fill="#333333"/>
</svg>

        </a>
      </div>
    </div>
  </div>

  <!-- 3. Footer banner -->
  {% if section.settings.show_bottom_banner %}
  <div class="footer-banner">
    <div class="page-width">
      <p class="desktop-footer-text">{{ section.settings.footer_text }}</p>
      <p class="mobile-footer-text">SUSTAINABLE, ETHICALLY MADE ACTIVEWEAR</p>
    </div>
  </div>
  {% endif %}
</div>

<style>
  .gift-guide-template {
    font-family: 'Jost', sans-serif;
    background-color: white;
  }

  .page-width {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 30px;
  }

  /* Full-width Image */
  .full-width-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* 50/50 Grid Layout */
  .two-column-grid {
    display: flex;
    padding: 40px 0 30px;
    align-items: center;
  }

  .grid-column {
    width: 50%;
  }

  .text-column {
    padding-right: 80px;
    margin-bottom: 70px;
    margin-right: 60px;
  }

  .image-column img.desktop-image {
    width: 120%;
    height: auto;
    display: block;
    transform: scale(1.2);
    transform-origin: center;
  }
  
  /* Mobile content styling - initially hidden */
  .mobile-content {
    display: none;
    position: relative;
  }
  
  .image-column img.mobile-image {
    display: none;
    width: 100%;
  }

  /* Text Column Styles */
  .main-title {
    font-size: 70px;
    line-height: 100%;
    letter-spacing:0px;
    margin-top: 0;
    margin-bottom: 30px;
    font-weight: 500;
    color: {{ section.settings.heading_color }};
  }

  .description {
    font-size: 20px;
    line-height: 140%;
    font-weight: 400;
    margin-bottom: 40px;
    letter-spacing: 0px;
    color: {{ section.settings.text_color }};
  }

  /* Mobile description - initially hidden */
  .mobile-description {
    display: none;
    font-size: 20px;
    line-height: 140%;
    margin-left:40px;
    font-weight: 400;
    margin-bottom: 20px;
    letter-spacing: 0px;
    color: {{ section.settings.text_color }};
  }

  /* Button Styles */
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background-color: #000;
    color: #fff;
    padding: 10px 40px;
    text-decoration: none;
    font-weight: 400;
    font-size: 16px;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    white-space: nowrap;
    position: relative;
    overflow: hidden;
    z-index: 1;
  }

  .cta-button:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background-color: #f7e84c;
    transition: width 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    z-index: -1;
  }

  .cta-button:hover:before {
    width: 100%;
  }

  .cta-button:hover {
    color: #000;
    transform: translateX(5px);
  }

  .arrow-icon {
    width: 20px;
    height: 20px;
    transition: all 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    stroke: #fff;
    position: relative;
    z-index: 2;
  }

  .cta-button:hover .arrow-icon {
    transform: translateX(5px);
    stroke: #000;
  }

  /* Footer Banner */
  .footer-banner {
    background-color: {{ section.settings.bg_color }};
    padding: 15px 0;
    text-align: center;
    margin-top: 6px;
  }

  .footer-banner p {
    margin: 0;
    font-size: 16px;
    text-transform: uppercase;
    letter-spacing: 0px;
    font-weight: 400;
    color: {{ section.settings.footer_text_color }};
  }

  /* Hide mobile footer text by default */
  .mobile-footer-text {
    display: none;
  }

  /* Responsive Styles */
  @media screen and (max-width: 989px) {
    .main-title {
      font-size: 3.5rem;
    }

    .description {
      font-size: 1.2rem;
    }

    .text-column {
      padding-right: 30px;
      margin-right: 0;
    }
  }

  @media screen and (max-width: 749px) {
    .gift-guide-template {
      background-color: #ffffff;
    }
    
    .full-width-image {
      display: none;
    }

    .two-column-grid {
      flex-direction: column;
      padding: 20px 0 10px;
    }

    .grid-column {
      width: 100%;
    }

    .text-column {
      {% comment %} background-color:red; {% endcomment %}
      margin-right:50px;
      order: 0;
      padding-right: 0;
      {% comment %} margin-right: 0; {% endcomment %}
      text-align: center;
      margin-bottom: 15px;
    }
    

    /* Show mobile description and hide desktop description */
    .mobile-description {
      display: block;
      font-size: 1.5rem;
      margin-bottom: 15px;
      margin-left: 40px;
    }
    
    .desktop-description {
      display: none;
    }
    
    .image-column {
      order: 1;
      margin: 0;
      padding: 0;
    }
    
    /* Mobile image display */
    .image-column img.desktop-image {
      display: none;
    }
    
    .mobile-content {
      display: block;
      width: 100%;
    }
    
    .image-column img.mobile-image {
      display: block;
      width: 100%;
      max-width: 100%;
      height: auto;
      transform: none;
    }
    
    /* Mobile centered button */
    .desktop-only-button {
      display: none;
    }
    
    .mobile-centered-button {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      display: inline-flex;
      align-items: center;
      gap: 10px;
      background-color: #000;
      color: #fff;
      padding: 10px 30px;
      text-decoration: none;
      font-weight: 400;
      font-size: 15px;
      letter-spacing: 1.5px;
      text-transform: uppercase;
      transition: all 0.3s ease;
      z-index: 2;
      border-radius: 0px;
      min-width: 160px;
      box-sizing: border-box;
      white-space: nowrap;
      max-width: 90%;
      margin: 0 auto;
      margin-top:55px;
    }
    
    .mobile-centered-button:before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 0;
      height: 100%;
      background-color: #f7e84c;
      transition: width 0.3s ease;
      z-index: -1;
    }
    
    .mobile-centered-button:hover:before {
      width: 100%;
    }
    
    .mobile-centered-button:hover {
      color: #000;
    }
    
    .mobile-centered-button .arrow-icon {
      width: 18px;
      height: 18px;
      transition: transform 0.3s ease;
    }
    
    .mobile-centered-button:hover .arrow-icon {
      transform: translateX(3px);
      stroke: #000;
    }
    
    /* Mobile text styling */
    .main-title {
      font-size: 3rem;
      line-height: 1.1;
      margin-bottom: 12px;
      font-weight:600;
    }
    
    /* Footer styling */
    .footer-banner {
      margin-top: 0;
      background-color: #f9f9f9;
      font-size:6px;
      padding: 15px 0;
    }
    
    .desktop-footer-text {
      display: none;
    }
    
    .mobile-footer-text {
      display: block;
      font-size: 6px;
      padding: 0 15px;
      letter-spacing: 0.5px;
    }
  }

  /* Extra Small Mobile Devices (under 470px) */
  @media screen and (max-width: 470px) {
    .mobile-centered-button {
      padding: 8px 20px;
      font-weight:300;
      line-height:20.48px;
      font-size: 15px;
      min-width: 120px;
      margin-right:10px;
    }

    .mobile-centered-button .arrow-icon {
      width: 24px;
      height: 24px;
    }

    .main-title {
      font-family:'Jost';
      font-weight:500;
      line-height:100%;
      font-size: 30px;
      margin-bottom: 20px;
      margin-left:25px;
    }

    .mobile-description {
      font-family:'Jost';
      font-size: 17px;
      line-height:130%;
      margin-bottom: 10px;
      margin-left: 40px;
    }

    .mobile-content {
      min-height: 200px;
    }

    .mobile-centered-button {
      transform: translate(-50%, -50%) scale(0.9);
    }
    .footer-banner p {
      font-weight:400;
      letter-spacing:0px;
      font-size: 12.5px;
      text-transform: uppercase;
      letter-spacing: 0px;
      font-weight: 400;
      color: {{ section.settings.footer_text_color }};
    }
  }
</style>

{% schema %}
{
  "name": "Gift Guide",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "The Gift Guide",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "SHOP NOW",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "full_width_image",
      "label": "Full Width Top Image",
      "info": "Image displayed at the top of the section (hidden on mobile)"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Right Column Image",
      "info": "Image displayed in the right column on desktop devices"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image",
      "info": "Image displayed on mobile devices"
    },
    {
      "type": "header",
      "content": "Footer Settings"
    },
    {
      "type": "checkbox",
      "id": "show_bottom_banner",
      "label": "Show footer banner",
      "default": true
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#f9f9f9"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Text color",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}