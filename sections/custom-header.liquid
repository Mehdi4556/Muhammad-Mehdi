      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Mobile Menu Settings"
    },
    {
      "type": "link_list",
      "id": "mobile_menu",
      "label": "Mobile menu",
      "default": "main-menu"
    }
  ],
  "presets": [
    {
      "name": "Custom Header",
      "category": "Custom Content"
    }
  ]
}
{% endschema %}